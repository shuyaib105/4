rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Exam rules
    match /exams/{examId} {
      // Any authenticated user can read exams to take them
      allow read: if request.auth != null;
      // Only the admin can create, update, or delete exams
      allow write: if request.auth != null && request.auth.token.email == 'mdshuyaibislam5050@gmail.com';
    }
  }
}
